<?xml version="1.0" encoding="utf-8" ?>
<views:BaseView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:Workout.Planner.ViewModels"
             xmlns:strings="clr-namespace:Workout.Planner.Strings"
             xmlns:views="clr-namespace:Workout.Planner.Views"
             x:Class="Workout.Planner.Views.SettingsPage"
             x:DataType="viewModels:SettingsPageViewModel"
             Shell.FlyoutBehavior="Disabled"
             Title="SettingsPage">
    <StackLayout>
    <Grid Padding="20"
          Margin="20">
        <Button 
            Text="Delete Profile"
            Command="{x:Binding DeleteUserProfileCommand}"/>
    </Grid>
    <Grid>
        <Button Text="Change Email"
                Command="{x:Binding ChangeUserEmailCommand}"/>
    </Grid>
    </StackLayout>
</views:BaseView>
